{
  "manifest_version": 2,

  "name": "Simple Bitcoin Ticker",
  "short_name": "Simple Bitcoin Ticker",
  "description": "SBT Is a simple bitcoin price on real time (Very light plugin). Get real time price from blockchain.info",
  "version": "1.0.1",
  "permissions": [
   "https://blockchain.info/",
    "activeTab","webNavigation","tabs"
 ],
  "browser_action": {
    "default_icon": "btc.png",
    "default_title": "Go to blockchain"
  },
"icons": {
    "16": "btc.png",
    "48": "btc.png",
    "128": "btc.png"
  },
"background":
{
  "scripts":["jquery.js","background.js"]
}
}
